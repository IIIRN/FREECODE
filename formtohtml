</head>
<body class="bg-gray-100 p-6">
    <div class="max-w-lg mx-auto bg-white p-8 rounded shadow-md">
        <h1 class="text-2xl font-bold mb-6">Submit Form</h1>
        <form id="submit-form">
            <div class="mb-4">
                <label class="block text-gray-700 mb-2" for="datetime">Date and Time</label>
                <input type="datetime-local" id="datetime" name="datetime" class="w-full p-2 border rounded">
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 mb-2" for="dropdown">Dropdown</label>
                <select id="dropdown" name="dropdown" class="w-full p-2 border rounded">
                    <option value="Option 1">Option 1</option>
                    <option value="Option 2">Option 2</option>
                    <option value="Option 3">Option 3</option>
                </select>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 mb-2" for="radio">Radio</label>
                <div>
                    <label class="inline-flex items-center">
                        <input type="radio" name="radio" value="Choice 1" class="form-radio">
                        <span class="ml-2">Choice 1</span>
                    </label>
                </div>
                <div>
                    <label class="inline-flex items-center">
                        <input type="radio" name="radio" value="Choice 2" class="form-radio">
                        <span class="ml-2">Choice 2</span>
                    </label>
                </div>
                <div>
                    <label class="inline-flex items-center">
                        <input type="radio" name="radio" value="Choice 3" class="form-radio">
                        <span class="ml-2">Choice 3</span>
                    </label>
                </div>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 mb-2" for="file">File Upload</label>
                <input type="file" id="file" name="file" class="w-full p-2 border rounded">
            </div>
            <div>
                <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded">Submit</button>
            </div>
        </form>
        <p id="status" class="text-green-500 mt-4"></p>
    </div>

    <script>
        document.getElementById('submit-form').addEventListener('submit', async function(event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            const data = {};
            formData.forEach((value, key) => { data[key] = value });

            try {
                const response = await fetch('https://script.google.com/macros/s/AKfycbyLizvJke3fHBrmYPRtUMfQEiq8xH2Y2K1p6xDaRaQdpdJ9uloeiC3pdi_BZsULfmaMow/exec', {
                    method: 'POST',
                    mode: 'cors',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                const result = await response.json();
                document.getElementById('status').textContent = result.message;
            } catch (error) {
                document.getElementById('status').textContent = 'Submission failed!';
            }
        });
    </script>
</body>
